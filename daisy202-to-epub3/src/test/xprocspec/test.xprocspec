<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.daisy.org/ns/xprocspec"
			   xmlns:px="http://www.daisy.org/ns/pipeline/xproc"
			   xmlns:c="http://www.w3.org/ns/xproc-step"
			   script="../../main/resources/xml/daisy202-to-epub3.xpl">

    <x:scenario label="Running with media overlays and compatibility mode enabled">
        <x:call step="px:daisy202-to-epub3">
            <x:option name="href" select="resolve-uri('../resources/input/book1/ncc.html')"/>
            <x:option name="output" select="resolve-uri('scenario1/output/',$temp-dir)"/>
            <x:option name="temp-dir" select="resolve-uri('scenario1/temp-dir/',$temp-dir)"/>
        </x:call>
		<x:context label="the output directory">
            <x:document type="directory" base-uri="temp-dir" href="scenario1/output/"/>
		</x:context>
        <x:expect type="compare"
				  label="the output directory should contain the EPUB file, and it should be named after the title of the book">
            <x:document>
                <c:directory name="output">
                    <c:file name="F00000.epub"/>
                </c:directory>
            </x:document>
        </x:expect>
		<x:context label="the temp directory">
            <x:document type="directory" base-uri="temp-dir" href="scenario1/temp-dir/" recursive="true"/>
		</x:context>
        <x:expect label="the temp-dir directory should contain 15 files, including the media overlay and mp3 files"
				  type="xpath" test="count(//c:file)" equals="15"/>
        <x:expect type="compare"
				  label="the temp directory">
            <x:document type="directory" href="../resources/expected/scenario1/temp-dir/" recursive="true"/>
		</x:expect>
		<x:context label="the package.opf file">
            <x:document type="file" base-uri="temp-dir" href="scenario1/temp-dir/epub/EPUB/package.opf" method="xml"/>
		</x:context>
        <x:expect label="the OPF 2.0 meta elements should be present"
				  type="xpath"
                  test="count(/*/*[local-name()='metadata']/*[namespace-uri()='http://www.idpf.org/2007/opf'
						                                      and local-name()='meta'
															  and (@name or @content)]) &gt; 0"/>
    </x:scenario>


    <x:scenario label="Running with media overlays and compatibility mode disabled">
        <x:call step="px:daisy202-to-epub3">
            <x:option name="href" select="resolve-uri('../resources/input/book1/ncc.html')"/>
            <x:option name="output" select="resolve-uri('scenario2/output/',$temp-dir)"/>
            <x:option name="temp-dir" select="resolve-uri('scenario2/temp-dir/',$temp-dir)"/>
            <x:option name="mediaoverlay" select="'false'"/>
            <x:option name="compatibility-mode" select="'false'"/>
        </x:call>
		<x:context label="the temp directory">
            <x:document type="directory" base-uri="temp-dir" href="scenario2/temp-dir/" recursive="true"/>
		</x:context>
        <x:expect label="the temp-dir directory should only contain 6 files" type="xpath" test="count(//c:file)" equals="6"/>
        <x:expect type="compare"
				  label="the temp directory">
            <x:document type="directory" href="../resources/expected/scenario2/temp-dir/" recursive="true"/>
		</x:expect>
		<x:context label="the package.opf file">
            <x:document type="file" base-uri="temp-dir" href="scenario2/temp-dir/epub/EPUB/package.opf" method="xml"/>
		</x:context>
        <x:expect label="the OPF 2.0 meta elements should not be present"
				  type="xpath"
                  test="count(/*/*[local-name()='metadata']/*[namespace-uri()='http://www.idpf.org/2007/opf'
						                                      and local-name()='meta'
															  and (@name or @content)]) = 0"/>
		
		<x:context label="the mimetype file">
            <x:document type="file" base-uri="temp-dir" href="scenario2/temp-dir/epub/mimetype" method="text"/>
		</x:context>
        <x:expect type="compare"
				  label="the mimetype file should contain the string 'application/epub+zip'">
            <x:document>
                <c:body>application/epub+zip</c:body>
            </x:document>
        </x:expect>
    </x:scenario>

</x:description>
